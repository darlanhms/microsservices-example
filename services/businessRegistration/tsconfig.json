{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
        ],
        "strict": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "noEmitOnError": true,
        "baseUrl": "./src",
        "paths": {
            "@domain/*": ["./domain/*"],
            "@repositories/*": ["./repositories/*"],
            "@infra/*": ["./infra/*"],
            "@mappers/*": ["./mappers/*"],
            "@useCases/*": ["./useCases/*"],
            "@subscriptions/*": ["./subscriptions/*"],
        }
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
 }
